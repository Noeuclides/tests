class Bank
  def least_number_of_dollars(dollars, amount)
    i = 0
    count = 0
    dollars.reverse
    while i < dollars.length do
      puts dollars[i]
      if amount/dollars[i] >= 1
        amount = amount - dollars[i]
        count = count + 1
      else
        i = i + 1
      end
    end
    return count
  end
end

b = Bank.new
puts b.least_number_of_dollars([1,2,5], 11)
