    l = len(states)
    new = states[:]
    if l == 1:
        new = [0]
        return(new)
    for i in range(rows):
        for j in range(columns):
            while 0 in grid[i][j]:
                count = count + 1
                if j == 0 && i == 0:
                    if grid[i][j + 1] == 1 || grid[i + 1][j] == 1:
                        new[i][j] = 1 
                    elif i == row - 1 :
                        if states[i - 1] == 0:
                            new[i] = 0 
                        else:
                            new[i] = 1
                    elif 0 < i < l - 1:
                        if states[i - 1] == states[i +1]:
                            new[i] = 0 
                        else:
                            new[i] = 1
                            states = new[:]
                            print(new)
            else:
                count = count + 1
    return new
